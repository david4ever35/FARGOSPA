@inject FargoSpaAppWellness.Services.UserSession Session
@inject NavigationManager Nav
@implements IDisposable


<nav class="navbar navbar-expand-lg navbar-dark bg-primary sticky-top w-100">
    <div class="container-fluid">
        <a class="navbar-brand" href="">FargoSpaAppWellness</a>

        <button class="navbar-toggler"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#navbarLinks"
                aria-controls="navbarLinks"
                aria-expanded="false"
                aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarLinks">
            <ul class="navbar-nav ms-auto">

                <!-- Standard links -->
                <li class="nav-item nav-item-center">
                    <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">Home</NavLink>
                </li>
                <li class="nav-item nav-item-center">
                    <NavLink class="nav-link" href="services">Services</NavLink>
                </li>
                <li class="nav-item nav-item-center">
                    <NavLink class="nav-link" href="book">Book Appointment</NavLink>
                </li>
                <li class="nav-item nav-item-center">
                    <NavLink class="nav-link" href="testimonials">Testimonials</NavLink>
                </li>
                <li class="nav-item nav-item-center">
                    <NavLink class="nav-link" href="contact">Contact</NavLink>
                </li>

                <!-- Admin-only link -->
                @if (Session.IsAdmin)
                {
                    <li class="nav-item nav-item-center">
                        <NavLink class="nav-link" href="admin">Admin Dashboard</NavLink>
                    </li>
                }

                <!-- Login / Logout -->
                @if (Session.IsLoggedIn)
                {
                    <li class="nav-item nav-item-center">
                        <span class="nav-link">Hello, @Session.CurrentUser!.Email</span>
                    </li>
                    <li class="nav-item nav-item-center">
                        <button class="btn btn-link nav-link text-decoration-none" @onclick="Logout">Logout</button>
                    </li>
                }
                else
                {
                    <li class="nav-item nav-item-center">
                        <NavLink class="nav-link" href="login">Login</NavLink>
                    </li>
                }

            </ul>
        </div>
    </div>
</nav>

@code {
    protected override void OnInitialized()
    {
        Session.OnChange += StateHasChanged; // re-render when session changes
    }

    void Logout()
    {
        Session.Logout();
        Nav.NavigateTo("/");
    }

    public void Dispose()
    {
        Session.OnChange -= StateHasChanged; // unsubscribe to prevent memory leaks
    }
}
