@page "/testimonials"
@using FargoSpaAppWellness.Models
@inject FargoSpaAppWellness.Data.SpaDbContext Db

<h1 class="mb-4">Testimonials</h1>

<!-- ===================== -->
<!-- ADD NEW TESTIMONIAL -->
<!-- ===================== -->
<div class="card mb-5 p-4 shadow-sm">
    <h3 class="mb-3">Add a Testimonial</h3>
    <div class="mb-3">
        <label class="form-label">Name:</label>
        <input @bind="newTestimonial.Name" class="form-control" placeholder="Your name" />
    </div>
    <div class="mb-3">
        <label class="form-label">Message:</label>
        <textarea @bind="newTestimonial.Message" class="form-control" placeholder="Your message"></textarea>
    </div>
    <button class="btn btn-primary" @onclick="AddTestimonial">Submit</button>
</div>

<!-- ===================== -->
<!-- LIST OF TESTIMONIALS -->
<!-- ===================== -->
<h3>All Testimonials</h3>

@if (testimonials.Count == 0)
{
    <p>No testimonials yet.</p>
}
else
{
    <ul class="list-group mb-5">
        @foreach (var t in testimonials)
        {
            <li class="list-group-item d-flex justify-content-between align-items-start">
                <div>
                    <strong>@t.Name</strong><br />
                    @t.Message
                </div>
                <button class="btn btn-sm btn-danger" @onclick="() => DeleteTestimonial(t.Id)">Delete</button>
            </li>
        }
    </ul>
}

@code {
    private List<Testimonial> testimonials = new List<Testimonial>();
    private Testimonial newTestimonial = new Testimonial();

    protected override void OnInitialized()
    {
        LoadTestimonials();
    }

    private void LoadTestimonials()
    {
        // Load all testimonials from database
        testimonials = Db.Testimonials.OrderByDescending(t => t.Id).ToList();
    }

    private void AddTestimonial()
    {
        if (string.IsNullOrWhiteSpace(newTestimonial.Name) ||
            string.IsNullOrWhiteSpace(newTestimonial.Message))
        {
            // simple validation
            return;
        }

        Db.Testimonials.Add(newTestimonial);
        Db.SaveChanges();

        // Refresh the list
        LoadTestimonials();

        // Clear the form
        newTestimonial = new Testimonial();
    }

    private void DeleteTestimonial(int id)
    {
        var testimonial = Db.Testimonials.Find(id);
        if (testimonial != null)
        {
            Db.Testimonials.Remove(testimonial);
            Db.SaveChanges();
            LoadTestimonials();
        }
    }
}
