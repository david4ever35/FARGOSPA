@page "/testimonials"
@using FargoSpaAppWellness.Models
@inject FargoSpaAppWellness.Services.UserSession Session
@inject FargoSpaAppWellness.Data.SpaDbContext Db
<style>
    .padded {
        padding: 20px;
    }
</style>
<div class="padded"> 
<h1 class="mb-4">Testimonials</h1>

    <!-- ===================== -->
    <!-- LIST OF TESTIMONIALS -->
    <!-- ===================== -->
@if (testimonials.Count == 0)
{
    <p>No testimonials yet.</p>
}
else
{
    <ul class="list-group mb-5">
        @foreach (var t in testimonials)
        {

            <li class="list-group-item d-flex justify-content-between align-items-start">
                <div>
                    <strong>@t.Name</strong><br />

                    <span class="text-warning">
                        @for (int i = 0; i < t.Rating; i++)
                        {
                            <span>&#9733;</span>
                        }
                        @for (int i = t.Rating; i < 5; i++)
                        {
                            <span class="text-muted">&#9733;</span>
                        }
                    </span>

                    <div class="mt-2">
                        @t.Message
                    </div>
                </div>

                @if (Session.IsAdmin)
                    {
                        <button class="btn btn-sm btn-danger"
                        @onclick="() => DeleteTestimonial(t.Id)">
                        Delete
                        </button>
                    }
            </li>

        }
    </ul>
}
<div>
<!-- ===================== -->
<!-- ADD NEW TESTIMONIAL -->
<!-- ===================== -->
<div class="card mb-5 p-4 shadow-sm">
    <h3 class="mb-3">Leave your own review!</h3>
    <div class="mb-3">
        <label class="form-label">Name:</label>
        <input @bind="newTestimonial.Name" class="form-control" placeholder="Your name" />
    </div>
    <div class="mb-3">
        <label class="form-label">Message:</label>
        <textarea @bind="newTestimonial.Message" class="form-control" placeholder="Your message"></textarea>
    </div>
    <div class="mb-3">
        <label>Rating:</label>
        <select @bind="newTestimonial.Rating" class="form-select">
            <option value="5">&#9733;&#9733;&#9733;&#9733;&#9733; (5)</option>
            <option value="4">&#9733;&#9733;&#9733;&#9733; (4)</option>
            <option value="3">&#9733;&#9733;&#9733; (3)</option>
            <option value="2">&#9733;&#9733; (2)</option>
            <option value="1">&#9733; (1)</option>
        </select>
    </div>
    <button class="btn btn-primary" @onclick="AddTestimonial">Submit</button>
</div>

    </div>
</div>


@code {
    private List<Testimonial> testimonials = new List<Testimonial>();
    private Testimonial newTestimonial = new Testimonial();

    protected override void OnInitialized()
    {
        LoadTestimonials();
    }

    private void LoadTestimonials()
    {
        // Load all testimonials from database
        testimonials = Db.Testimonials.OrderByDescending(t => t.Id).ToList();
    }

    private void AddTestimonial()
    {
        if (string.IsNullOrWhiteSpace(newTestimonial.Name) ||
            string.IsNullOrWhiteSpace(newTestimonial.Message) ||
            newTestimonial.Rating < 1 || newTestimonial.Rating > 5)
        {
            return;
        }

        Db.Testimonials.Add(newTestimonial);
        Db.SaveChanges();

        LoadTestimonials();

        newTestimonial = new Testimonial { Rating = 5 };
    }


    private void DeleteTestimonial(int id)
    {
        var testimonial = Db.Testimonials.Find(id);
        if (testimonial != null)
        {
            Db.Testimonials.Remove(testimonial);
            Db.SaveChanges();
            LoadTestimonials();
        }
    }
}
