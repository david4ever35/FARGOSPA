@page "/services"

<PageTitle>Our Services</PageTitle>

<!-- HERO SECTION -->
<div class="bg-info bg-opacity-25 text-center"
     style="padding: 5rem 1rem;">
    <h1 class="display-4 fw-bold mb-3">Our Spa Services</h1>
    <p class="lead mb-0">
        Relax, rejuvenate, and restore with our variety of treatments
    </p>
</div>

<div class="container my-5">

    <!-- MASSAGE THERAPY -->
    <div class="bg-body-secondary rounded-5 shadow-sm mb-5 text-center"
         style="padding: 3.5rem;">

        <img src="/images/Services/massage.jpg"
             alt="Massage Therapy"
             class="img-fluid rounded shadow mb-4"
             style="max-width: 300px; display: block; margin: auto;" />

        <h2 class="service-header mb-4">Massage Therapy</h2>

        <div class="row justify-content-center">
            <div class="col-md-4 px-4 py-3">
                <h5 class="mb-2"><u>Swedish Massage</u></h5>
                <p class="mb-0">
                    Gentle, relaxing massage to relieve stress and tension<br />
                    <strong>Starting at $45</strong>
                </p>
            </div>
            <div class="col-md-4 px-4 py-3">
                <h5 class="mb-2"><u>Deep Tissue Massage</u></h5>
                <p class="mb-0">
                    Targets deeper layers of muscles to release chronic tension<br />
                    <strong>Starting at $65</strong>
                </p>
            </div>
            <div class="col-md-4 px-4 py-3">
                <h5 class="mb-2"><u>Hot Stone Massage</u></h5>
                <p class="mb-0">
                    Warm stones combined with massage for ultimate relaxation<br />
                    <strong>Starting at $75</strong>
                </p>
            </div>
        </div>
    </div>

    <!-- FACIALS -->
    <div class="bg-white rounded-5 shadow-sm mb-5 text-center"
         style="padding: 3.5rem;">

        <img src="/images/Services/facial.jpg"
             alt="Facials"
             class="img-fluid rounded shadow mb-4"
             style="max-width: 300px; display: block; margin: auto;" />

        <h2 class="service-header mb-4">Facials</h2>

        <div class="row justify-content-center">
            <div class="col-md-4 px-4 py-3">
                <h5 class="mb-2"><u>Classic Facial</u></h5>
                <p class="mb-0">
                    Deep cleansing and hydrating treatment for all skin types<br />
                    <strong>Starting at $30</strong>
                </p>
            </div>
            <div class="col-md-4 px-4 py-3">
                <h5 class="mb-2"><u>Anti-Aging Facial</u></h5>
                <p class="mb-0">
                    Reduces fine lines and rejuvenates skin with specialized products<br />
                    <strong>Starting at $40</strong>
                </p>
            </div>
            <div class="col-md-4 px-4 py-3">
                <h5 class="mb-2"><u>Acne Treatment Facial</u></h5>
                <p class="mb-0">
                    Targets blemishes and inflammation for clearer skin<br />
                    <strong>Starting at $25</strong>
                </p>
            </div>
        </div>
    </div>

    <!-- BODY TREATMENTS -->
    <div class="bg-body-secondary rounded-5 shadow-sm mb-5 text-center"
         style="padding: 3.5rem;">

        <img src="/images/Services/body.jpg"
             alt="Body Treatments"
             class="img-fluid rounded shadow mb-4"
             style="max-width: 300px; display: block; margin: auto;" />

        <h2 class="service-header mb-4">Body Treatments</h2>

        <div class="row justify-content-center">
            <div class="col-md-4 px-4 py-3">
                <h5 class="mb-2"><u>Body Scrub</u></h5>
                <p class="mb-0">
                    Exfoliates and smooths your skin for a radiant glow<br />
                    <strong>Starting at $30</strong>
                </p>
            </div>
            <div class="col-md-4 px-4 py-3">
                <h5 class="mb-2"><u>Body Wrap</u></h5>
                <p class="mb-0">
                    Detoxifying and hydrating treatment to nourish your skin<br />
                    <strong>Starting at $20</strong>
                </p>
            </div>
            <div class="col-md-4 px-4 py-3">
                <h5 class="mb-2"><u>Hot Stone Therapy</u></h5>
                <p class="mb-0">
                    Combines heat and massage for deep relaxation and relief<br />
                    <strong>Starting at $50</strong>
                </p>
            </div>
        </div>
    </div>

    <!-- CALL TO ACTION -->
    <div class="bg-white rounded-5 shadow-sm mb-5 text-center"
         style="padding: 4rem 3rem;">

        <h2 class="service-header mb-3">Book Your Appointment Today</h2>
        <p class="mb-4">
            Experience relaxation and rejuvenation with our professional services.
        </p>

        <div>
            <a class="btn btn-success btn-lg me-3" href="/register">
                Create Account
            </a>
            <a class="btn btn-outline-primary btn-lg" href="/book">
                Book Now
            </a>
        </div>
    </div>

</div>

